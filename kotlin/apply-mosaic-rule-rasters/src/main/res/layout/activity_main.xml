<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <com.esri.arcgisruntime.mapping.view.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.esri.arcgisruntime.mapping.view.MapView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/defaultButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/northwestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Northwest rule" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/centerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center rule" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/byAttributeRuleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ByAttribute rule" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/lockRasterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock raster rule" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>